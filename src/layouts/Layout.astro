---
import "@/styles/global.css";
import Header from "@/components/Layout/Header.astro";
interface Props {
    title?: string;
}

const { title = "Osuc" }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="relative has-[#menu-toggle:checked]:overflow-hidden">
        <Header />
        <slot />
    </body>
</html>
